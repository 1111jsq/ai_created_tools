# ============================================
# 统一配置文件模板
# 复制此文件为 .env 并填写实际值
# ============================================

# ============================================
# LLM 配置（DeepSeek/OpenAI 兼容）
# ============================================
# 统一使用 LLM_API_KEY，兼容 DEEPSEEK_API_KEY 和 OPENAI_API_KEY
LLM_API_KEY=your_api_key_here
DEEPSEEK_API_KEY=your_api_key_here
OPENAI_API_KEY=your_api_key_here

# LLM 基础 URL（默认 DeepSeek）
LLM_BASE_URL=https://api.deepseek.com
DEEPSEEK_BASE_URL=https://api.deepseek.com

# LLM 模型名称
LLM_MODEL=deepseek-chat
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# LLM 超时时间（秒）
LLM_TIMEOUT=60
DEEPSEEK_TIMEOUT=60

# ============================================
# GitHub API 配置
# ============================================
GITHUB_TOKEN=your_github_token_here
GITHUB_API_BASE=https://api.github.com
GITHUB_PER_PAGE=100
GITHUB_MAX_PAGES=10
GITHUB_API_PER_PAGE=100
GITHUB_API_MAX_PAGES=10

# ============================================
# 代理配置（可选）
# ============================================
HTTP_PROXY=
HTTPS_PROXY=

# ============================================
# 爬虫配置
# ============================================
CRAWLER_REQUEST_DELAY=1.0
CRAWLER_TIMEOUT=30
CRAWLER_RETRY_TIMES=3

# ============================================
# LLM 处理配置
# ============================================
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_CHUNK_CHARS=12000
LLM_CHUNK_OVERLAP=500
LLM_VERSIONS_PER_CHUNK=20
LLM_PRE_FILTER=false

# ============================================
# OpenReview 配置
# ============================================
OPENREVIEW_ENABLED=1
OPENREVIEW_BASE_URL=https://api.openreview.net
OPENREVIEW_PAGE_SIZE=50
OPENREVIEW_MAX_PAGES=4
OPENREVIEW_VENUES=
OPENREVIEW_QUERY=
OPENREVIEW_TIMEOUT=30
OPENREVIEW_VENUE_ID=
OPENREVIEW_STATUS=all

# ============================================
# 项目路径配置（可选，通常使用默认值）
# ============================================
SRC_DIR=src
DATA_DIR=data
RELEASES_DIR=data/releases
SUMMARIES_DIR=data/summaries
NEWS_SOURCES_PATH=get_agent_news/configs/sources.yaml
NEWS_LOG_PATH=get_agent_news/logs/app.log
FILE_ENCODING=utf-8

# ============================================
# 其他配置
# ============================================
REPOSITORIES_CONFIG_FILE=repositories.yaml
LOG_LEVEL=INFO
